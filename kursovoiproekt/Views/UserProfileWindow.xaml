<Window x:Class="kursovoiproekt.Views.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль пользователя" 
        Height="400" 
        Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Просмотр профиля" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Логин:" Width="100" FontWeight="Bold"/>
                <TextBlock x:Name="UsernameText"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Email:" Width="100" FontWeight="Bold"/>
                <TextBlock x:Name="EmailText"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Роль:" Width="100" FontWeight="Bold"/>
                <TextBlock x:Name="RoleText"/>
            </StackPanel>

            <Button Content="Закрыть" 
                    Width="120" 
                    Margin="0,30,0,0"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>